<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#E1EEBC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Date, Type, and Schedule Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1B211A"/>
            
            <TextView
                android:id="@+id/tvWasteType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic"
                android:textSize="14sp"
                android:textColor="#3C3C3C"/>
                
            <!-- Layout untuk Detail Jadwal (Awalnya Tersembunyi) -->
            <LinearLayout
                android:id="@+id/layoutScheduleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    tools:text="ðŸ“ Bank Sampah Maju Jaya"/>
                
                <TextView
                    android:id="@+id/tvScheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    tools:text="ðŸ—“ï¸ 25/12/2024, 14:30"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Icon Status -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="#FFFFFF"/>

        <!-- Weight & Income Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 kg"
                android:textStyle="bold"
                android:textColor="#1B211A"/>
            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp35.000"
                android:textSize="12sp"
                android:textColor="#1B211A"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>