<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAF8"
    tools:context=".ui.user.MainActivity">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header_background_curved"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, User!"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's save the earth!"
        android:textColor="#E1EEBC"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#328E6E"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 kg"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvSelectedCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWeight"/>

            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 3.500"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#E1EEBC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi Pendapatan"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIncome"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:progress="0"
                android:max="9"
                android:progressTint="#E1EEBC"
                android:thumbTint="#E1EEBC"
                app:layout_constraintTop_toBottomOf="@id/tvSelectedCategory"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/gridFlow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:flow_wrapMode="chain"
        app:flow_maxElementsWrap="2"
        app:flow_horizontalGap="16dp"
        app:flow_verticalGap="16dp"
        app:constraint_referenced_ids="btnPlastic,btnGlass,btnOrganic,btnMetal,btnPaper,btnOther"
        app:layout_constraintTop_toBottomOf="@id/cardInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlastic"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Plastic"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#328E6E"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGlass"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Glass"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="#1B211A"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrganic"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Organic"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_gallery"
        app:iconTint="#1B211A"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMetal"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Metal"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconTint="#1B211A"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPaper"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Paper"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconTint="#1B211A"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOther"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Other"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#1B211A"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="NEXT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1B211A"
        app:backgroundTint="#E1EEBC"
        app:cornerRadius="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/gridFlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save for later"
        android:textSize="14sp"
        android:textColor="#328E6E"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#328E6E"
        android:gravity="center_vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_restore_from_trash_24"
            app:tint="#FFFFFF"
            android:alpha="1.0"/>
        <ImageView
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/outline_attach_money_24"
            app:tint="#FFFFFF"
            android:alpha="0.5"/>
        <ImageView
            android:id="@+id/navOrder"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/outline_bar_chart_4_bars_24"
            app:tint="#FFFFFF"
            android:alpha="0.5"/>
        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/outline_account_circle_24"
            app:tint="#FFFFFF"
            android:alpha="0.5"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>